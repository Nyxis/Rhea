<div class="box dashboard-summaries">
    <div class="tab-header">
        <i class="icon-th-list"></i>
        {{ ('dashboard.pdg.internals.labels.' ~ codeType)|trans }}
    </div>
    <table>
        {% for internal in internals %}
            <tr class="{% if loop.index0 % 2 == 0 %}odd{% else %}even{% endif %}">
                <td class="image">
                    {% if internal.image is not empty %}
                        <img style="width: 50px; height: 50px;" src="{{ asset(internal.image) }}">
                    {% else %}
                        <img src="{{ gravatar(internal.email, 50) }}">
                    {% endif %}
                </td>
                <td class="name">
                    <table class='internalInfos' style="height:100%">
                        <tr>
                            <td rowspan="2">
                                <a href="{{ path('UserBundle_internal_timeline', internal.routing) }}"><strong>{{ internal.longname }}</strong></a>
                            </td>
                            <td>
                                <strong>{{ 'dashboard.pdg.internals.tasks'|trans }} :</strong> {{ internal.countActiveTasks }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {{ attribute(lastTasks, internal.id).lateTasksRelatedByAssignedTo|length / internal.countActiveTasks * 100 // 1 }}% {{ 'dashboard.pdg.internals.PercentLateTask'|trans }} / {{ attribute(lastTasks, internal.id).cumulateTime }} {{ 'dashboard.pdg.internals.nbLateDays'|trans }}
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>