{% extends 'ExtiaDashboardBundle::dashboard_layout.html.twig' %}

{% block main %}
    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid">
                <div class="span12">
                    {{ render(controller('ExtiaDashboardBundle:Task:todayTasks', { 'userId': app.user.username })) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    {{ render(controller('ExtiaDashboardBundle:Task:nextTasks', { 'userId': app.user.username })) }}
                </div>
            </div>
        </div>
    </div>
{% endblock main %}

{% block sidebar %}
{{ parent() }}
<div class="row-fluid">
    <div class="span12">
        {{ render(controller('ExtiaDashboardBundle:Task:pastTasks', { 'userId': app.user.username })) }}
    </div>
</div>
{% endblock %}
