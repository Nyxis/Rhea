<li class="separator padded task">
    {% if task.userTargetId %}
    <div class="pull-right" style="margin-top:8px;">
        <img src="{{ gravatar(task.userTarget.email, 30) }}">
        <span>{{ task.userTarget.firstname }} {{ task.userTarget.lastname }}</span>
    </div>
    {% endif %}

    <h4>
        <small>{{ task.activationDate|date('d/m/Y') }}</small><br />
        {{ task.workflowNode.workflow.type }} - {{ task.workflowNode.name|trans }}
    </h4>

    <div class="btn-group">
        <button class="button"><i class="icon-comments-alt"></i> {{ 'history_link'|trans }}</button>
        <button class="button"><i class="icon-ok"></i> {{ 'handle_link'|trans }}</button>
        <button class="button"><i class="icon-refresh"></i> {{ 'differ_link'|trans }}</button>
        <button class="button"><i class="icon-remove"></i> {{ 'close_link'|trans }}</button>
    </div>
</li>
