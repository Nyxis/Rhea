{% extends 'ExtiaDashboardBundle::dashboard_layout.html.twig' %}

{% block main %}
    <div class="row-fluid">
        <div class="span12">
            <div class="box">
                <div class="tab-header">
                    <i class="icon-reorder"></i>
                    {{ 'workflow_detail_header'|trans }}
                </div>
                <div class="box-body">
                    <h4>
                        {{ workflow.type|trans }} <br />
                        <small>
                            {{ 'workflow_created_at'|trans }} {{ workflow.createdAt|date(('date_format.ymd'|trans)) }}
                            {{ 'workflow_created_by'|trans }} {{ tasks.first.userCreatedWorkflow.longName }}
                        </small>
                    </h4>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            {{ render(controller('ExtiaDashboardBundle:Timeline:tasksTimeline', { 'task_collection': tasks })) }}
        </div>
    </div>
{% endblock main %}
