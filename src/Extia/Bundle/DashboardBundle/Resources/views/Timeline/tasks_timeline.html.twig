<div class="row-fluid">
    <div class="span2">
        <div class="nav-menu box">
            <ul class="nav nav-list">
                {% for year, months in tasks %}
                    <li class="nav-header">
                        <a href="#timeline_year_{{ year }}">{{ year }}</a>
                    </li>
                    {% for month, tasks in months %}
                        <li><a href="#timeline_month_{{ month }}">{{ ('month.' ~ month)|trans }}</a></li>
                    {% endfor %}
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="span10">
        <div class="row-fluid">
            <div class="span12 task_timeline">
                {% for year, months in tasks %}
                    <div id="timeline_year_{{ year }}">
                        <div class="date-separator year-separator"><i class="icon-calendar"></i> {{ year }}</div>
                    {% for month, tasks in months %}
                        <div id="timeline_month_{{ month }}">
                            <div class="date-separator month-separator">{{ ('month.' ~ month)|trans }}</div>
                        {% for task in tasks %}
                            {% if task.node.current is empty %}
                                {% set refDate = task.node.completedAt %}
                            {% else %}
                                {% set refDate = task.activationDate %}
                            {% endif %}
                            <div class="box task_details">
                                <div class="tab-header">
                                    <i class="icon-tasks"></i>
                                    {{ task.node.name|trans }} -
                                    {{ refDate|date('date_format.md'|trans) }}
                                </div>
                                <p class="padded default">
                                    {{ 'task_managed_by'|trans }} {{ task.userAssigned.longName }}

                                    {% if task.node.current is empty %}
                                        {{ 'task_managed_at'|trans }}
                                        {{ task.node.completedAt('date_format.ymd'|trans) }}
                                    {% endif %}

                                    {{ 'task_managed_for'|trans }}
                                    {{ task.userTarget.longName }}
                                </p>
                            </div>
                        {% endfor %}
                        </div>
                    {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
