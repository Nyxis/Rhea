{% extends 'ExtiaGroupBundle::group_layout.html.twig' %}

{% block main %}
    <div class="row-fluid">
        <div class="span12">
            <div class="box">
                <div class="tab-header">{% block form_header %}{% endblock %}</div>
                <form id="group-form" class="padded" method="POST">
                    {{ form_rest(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar %}
<div class="row-fluid">
    <div class="span12">
        <div class="big-button-bar">
            <a href="#" class="button large" data-form="#group-form">
                <i class="icon-ok"></i>
                <span>{{ 'admin.buttons.save'|trans }}</span>
            </a>
            <a href="{{ path('GroupBundle_list') }}" class="button large">
                <i class="icon-reply"></i>
                <span>{{ 'admin.buttons.back'|trans }}</span>
            </a>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        jQuery(document).ready(function($) {
            $('a[data-form]').on('click', function(e) {
                e.preventDefault();
                $($(this).data('form')).trigger('submit');
            });
        });
    </script>
{% endblock %}
