<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="exti_menu.menu_builder.class">Extia\Bundle\MenuBundle\Menu\MainMenuBuilder</parameter>
        <parameter key="knp_menu.renderer.twig.options" type="collection">
            <parameter key="currentClass">active</parameter>
        </parameter>
    </parameters>

    <services>
        <!-- Menu factory -->
        <service id="exti_menu.menu_builder" class="%exti_menu.menu_builder.class%">
            <argument type="service" id="knp_menu.factory" />
            <argument type="service" id="translator" />
        </service>

        <!-- Main menu -->
        <service id="exti_menu.main_menu" class="Knp\Menu\MenuItem" scope="request"
            factory-service="exti_menu.menu_builder" factory-method="createMainMenu"
        >
            <tag name="knp_menu.menu" alias="main_menu" />
            <argument type="service" id="request" />
        </service>

        <!-- User menu -->
        <service id="exti_menu.user_menu" class="Knp\Menu\MenuItem" scope="request"
            factory-service="exti_menu.menu_builder" factory-method="createUserMenu"
        >
            <tag name="knp_menu.menu" alias="user_menu" />
            <argument type="service" id="request" />
        </service>

        <!-- Admin menu -->
        <service id="exti_menu.admin_menu" class="Knp\Menu\MenuItem" scope="request"
            factory-service="exti_menu.menu_builder" factory-method="createAdminMenu"
        >
            <tag name="knp_menu.menu" alias="admin_menu" />
            <argument type="service" id="request" />
        </service>


    </services>
</container>
