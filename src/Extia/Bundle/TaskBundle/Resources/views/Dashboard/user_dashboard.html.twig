{% extends 'ExtiaTaskBundle::task_layout.html.twig' %}

{% block main %}
    <div class="row-fluid">
        <div class="span12">
            <fieldset>
                <legend>Agence: {{ app.user.Agency.Code }}</legend>
            </fieldset>
            <div class="row-fluid">
                <div class="span12">
                    {{ render(controller('ExtiaTaskBundle:Dashboard:dashboardTimeline')) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    {% render(controller('ExtiaUserBundle:Internal:intercontracts', { 'internal': app.user })) %}
                </div>
            </div>
        </div>
    </div>
{% endblock main %}

{% block sidebar %}
    {{ parent() }}
    <div class="row-fluid">
        <div class="span12">
            {% render(controller('ExtiaUserBundle:Internal:teamPastTasks', { 'internal': app.user })) %}
        </div>
    </div>
{% endblock %}