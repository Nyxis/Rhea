{% extends 'ExtiaTaskBundle::task_layout.html.twig' %}

{% block main %}
    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid">
                <div class="span12 task_timeline">
                    {{ render(controller('ExtiaTaskBundle:Dashboard:dashboardTimeline')) }}
                </div>
            </div>
        </div>
    </div>
{% endblock main %}

{% block sidebar %}
    {{ parent() }}
    <div class="row-fluid">
        <div class="span12">
            {% render(controller('ExtiaUserBundle:Consultant:intercontractListBox', { 'internal': app.user })) %}
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            {% render(controller('ExtiaUserBundle:Internal:teamPastTasks', { 'internal': app.user })) %}
        </div>
    </div>
{% endblock %}
