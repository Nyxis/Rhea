{% extends 'ExtiaTaskBundle::task_layout.html.twig' %}

{% block main %}
    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid">
                <div class="span12">
                    {{ render(controller('ExtiaTaskBundle:Task:todayTasks', { 'userId': app.user.username })) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    {{ render(controller('ExtiaTaskBundle:Task:nextTasks', { 'userId': app.user.username })) }}
                </div>
            </div>
        </div>
    </div>
{% endblock main %}


{% block sidebar %}
    {{ parent() }}
    <div class="row-fluid">
        <div class="span12">
            {{ render(controller('ExtiaTaskBundle:Task:pastTasks', { 'userId': app.user.username })) }}
        </div>
    </div>
{% endblock %}
