<div id="differ-task" class="black-box modal hide fade">
    <div class="modal-header tab-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <span>{{ 'task.differ.header'|trans }}</span>
    </div>

    <form action="{{ path('TaskBundle_differ') }}" method="POST" class="form-horizontal">
        {% form_theme form 'MopaBootstrapBundle:Form:fields.html.twig' %}

        {{ form_rest(form) }}

        <div class="modal-footer">
            <div class="inner-well">
                <button type="submit" class="button mini rounded">{{ 'task.differ.form.submit'|trans }}</button>
                <a class="button mini rounded light-gray" data-dismiss="modal">{{ 'modal_close'|trans }}</a>
            </div>
        </div>
    </form>
</div>