<div class="int-badge">
    {% if with_contact|default(false) is not empty %}
        <div class="pull-right int_contact">
            {% include 'ExtiaUserBundle:Badges:internal_contact.html.twig' %}
        </div>
    {% endif %}
    <div class="dtable">
        {% if is_granted('USER_DATA', int) %}
            {% set timeline_path = path('UserBundle_consultant_timeline', int.routing) %}
        {% else %}
            {% set timeline_path = '#' %}
        {% endif %}

        <div class="dtable-cell gravatar">
            <a href="{{ timeline_path }}">
                {% if int.image is not empty %}
                    <img style="width: 50px; height: 50px;" src="{{ asset(int.image) }}">
                {% else %}
                    <img src="{{ gravatar(int.email, 50) }}">
                {% endif %}
            </a>
        </div>
        <h4 class="dtable-cell">
            <a href="{{ timeline_path }}">{{ int.longname }}</a><br />
            <small>
                {{ int.job }}
            </small>
        </h4>
    </div>
</div>
