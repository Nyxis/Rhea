{% extends 'ExtiaUserBundle::user_timeline_layout.html.twig' %}

{% block user_details %}
<div class="row-fluid">
    <div class="span12">
        <div class="box user-details consultant">
            <div class="tab-header">
                <i class="icon-reorder"></i>
                {{ 'user_details_header'|trans }}
                {{ user.group.label|lower }}
            </div>
            <div class="box-body">
                <div class="pull-left gravatar">
                    <img src="{{ gravatar(user.email, 50) }}">
                </div>
                <div class="pull-right status">
                    {% if user.status == 'resigned' %}
                        <span class="badge badge-info">
                            <i class="icon-signout"></i> {{ 'status_resigned'|trans }}
                        </span>
                    {% elseif user.status == 'ic' %}
                        <span class="badge badge-important">
                            <i class="icon-warning-sign"></i> {{ 'status_ic'|trans }}
                        </span>
                    {% else %}
                        <span class="badge badge-success">
                            <i class="icon-ok"></i> {{ 'status_placed'|trans }}
                        </span>
                    {% endif %}
                </div>
                <h4>
                    {{ user.longname }} <br />
                    <small>{{ user.job.label }}</small>
                </h4>

                <div class="row-fluid data">
                    <div class="span4 contacts">
                        <h5>{{ 'user_contact'|trans }}</h5>
                        <ul>
                            <li><i class="icon-comment-alt"></i> {{ user.email }}</li>
                            {% if user.telephone %}<li><i class="icon-phone"></i> {{ user.telephone }}</li>{% endif %}
                            {% if user.mobile %}<li><i class="icon-mobile-phone"></i> {{ user.mobile }}</li>{% endif %}
                        </ul>
                    </div>
                    <div class="span4">
                        <h5>{{ 'user_contract'|trans }}</h5>
                        <ul>
                            <li><i class="icon-signin"></i> {{ 'user_begin_contract'|trans }} {{ user.contractBeginDate('date_format.ymd'|trans) }}</li>
                            {% if user.contractEndDate is not empty %}
                                <li>
                                    <i class="icon-signout"></i> {{ 'user_end_contract'|trans }} {{ user.contractEndDate('date_format.ymd'|trans) }}
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                    <div class="span4 crh">
                        <h5>{{ 'user_crh'|trans }}</h5>
                        <div class="pull-left gravatar">
                            <img src="{{ gravatar(user.crh.email, 30) }}">
                        </div>
                        <ul>
                            <li><i class="icon-comment-alt"></i> {{ user.crh.email }}</li>
                            {% if user.crh.telephone %}<li><i class="icon-phone"></i> {{ user.crh.telephone }}</li>{% endif %}
                            {% if user.crh.mobile %}<li><i class="icon-mobile-phone"></i> {{ user.crh.mobile }}</li>{% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block sidebar %}
<div class="row-fluid">
    <div class="span12">
        <div style="margin-bottom: 20px;">
            <div class="big-button-bar">
                <a href="#" class="button large">
                    <i class="icon-edit"></i>
                    <span>{{ 'edit_user_link'|trans }}</span>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="tab-header">
                <i class="icon-external-link"></i>
                {{ 'user_missions_header'|trans }}
            </div>
            <div class="box-body">
                <ul>
                    <li>Mission 1</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="tab-header">
                <i class="icon-folder-open"></i>
                {{ 'user_documents_header'|trans }}
            </div>
            <div class="box-body">
                <ul>
                    <li>Document 1</li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
