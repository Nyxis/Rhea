{% extends 'ExtiaUserBundle::user_timeline_layout.html.twig' %}

{% block main %}
    <div class="row-fluid">
        <div class="span12">
            <div class="box user-details consultant">
                <div class="tab-header">
                    <i class="icon-reorder"></i>
                    {{ 'user_timeline.details.header'|trans }}
                    {{ user.group.label|lower }}
                </div>
                <div class="box-body">
                    <div class="clearfix">
                        <div class="pull-left clt-header">
                            {% include 'ExtiaUserBundle:Badges:consultant.html.twig' with { 'clt': user.consultant } only %}
                        </div>
                        <div class="pull-right status">
                            {% if user.status == 'resigned' %}
                                <span class="badge badge-info">
                                    <i class="icon-signout"></i> {{ 'user_status.resigned'|trans }}
                                </span>
                            {% elseif user.status == 'ic' %}
                                <span class="badge badge-important">
                                    <i class="icon-warning-sign"></i> {{ 'user_status.ic'|trans }}
                                </span>
                            {% else %}
                                <span class="badge badge-success">
                                    <i class="icon-ok"></i> {{ 'user_status.placed'|trans }}
                                </span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row-fluid data">
                        <div class="span4 contacts">
                            <h5>{{ 'user_timeline.details.contact'|trans }}</h5>
                            <ul>
                                <li><i class="icon-comment-alt"></i> {{ user.email }}</li>
                                {% if user.telephone %}<li><i class="icon-phone"></i> {{ user.telephone }}</li>{% endif %}
                                {% if user.mobile %}<li><i class="icon-mobile-phone"></i> {{ user.mobile }}</li>{% endif %}
                            </ul>
                        </div>
                        <div class="span4">
                            <h5>{{ 'user_timeline.details.contract.header'|trans }}</h5>
                            <ul>
                                <li><i class="icon-signin"></i> {{ 'user_timeline.details.contract.begin'|trans }} {{ user.contractBeginDate('date_format.ymd'|trans) }}</li>
                                {% if user.contractEndDate is not empty %}
                                    <li>
                                        <i class="icon-signout"></i> {{ 'user_timeline.details.contract.end'|trans }} {{ user.contractEndDate('date_format.ymd'|trans) }}
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                        <div class="span4 internals">
                            <h5>{{ 'user_timeline.details.internals.header'|trans }}</h5>
                            <dl class="dl-horizontal">
                                <dt>{{ 'user_timeline.details.internals.crh'|trans }}</dt>
                                <dd>{% include 'ExtiaUserBundle:Badges:internal_small.html.twig' with { 'int': user.crh } only %}</dd>
                                <dt>{{ 'user_timeline.details.internals.manager'|trans }}</dt>
                                <dd>{% include 'ExtiaUserBundle:Badges:internal_small.html.twig' with { 'int': user.manager } only %}</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            {{  render(controller('ExtiaTaskBundle:Timeline:tasksTimeline', {
                    'task_collection': tasks,
                    'element_template': 'user_timeline_element.html.twig',
                    '_task_redirect_url': app.request.server.get('REQUEST_URI')
                }))
            }}
        </div>
    </div>
{% endblock main %}

{% block sidebar %}
<div class="row-fluid">
    <div class="span12">
        <div style="margin-bottom: 20px;">
            <div class="big-button-bar">
                <a href="#" class="button large">
                    <i class="icon-edit"></i>
                    <span>{{ 'user_timeline.actions.edit_user'|trans }}</span>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="tab-header">
                <i class="icon-external-link"></i>
                {{ 'user_timeline.missions.header'|trans }}
            </div>
            <div class="box-body">
                <ul>
                    <li>Mission 1</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="tab-header">
                <i class="icon-folder-open"></i>
                {{ 'user_timeline.documents.header'|trans }}
            </div>
            <div class="box-body">
                <ul>
                    <li>Document 1</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="tab-header">
                <i class="icon-tasks"></i>
                {{ 'user_timeline.tasks.header'|trans }}
            </div>
            <div class="box-body">
                <ul>
                    <li>Tache 1</li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
