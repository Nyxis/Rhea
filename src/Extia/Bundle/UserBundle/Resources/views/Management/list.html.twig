{% extends '::base.html.twig' %}

{% block 'content' %}
    <div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>{{ 'id'|trans }}</th>
                    <th>{{ 'Pr√©nom'|trans }}</th>
                    <th>{{ 'Courriel'|trans }}</th>
                    <th>{{ 'Mobile'|trans }}</th>
                    <th>{{ 'Action'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.mobile }}</td>
                        <td>
                            {% block 'edit_user' %}<a href="{{ path('extia_user_management_edit'), {'id':user.id } }}" class="btn btn-success">{{ 'Edit'|trans }}</a>{% endblock %}
                            {% block 'delete_user' %}<a href="{{ path('extia_user_management_delete'), {'id':user.id } }}" class="btn btn-danger">{{ 'Delete'|trans }}</a>{% endblock %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
