{% extends 'ExtiaTaskBundle:Workflow:timeline_element.html.twig' %}

{% block task_title %}{{ 'lunch.appointement.timeline.hook'|trans }}{% endblock %}

{% block main_target %}
    {% if task.target('mission') is not empty %}
        <a class="user" href="{{ path('MissionBundle_mission_admin_edit', task.target('mission').routing) }}">
            {{ task.target('mission').fullLabel }}
        </a>
    {% else %}
        <p>&nbsp;</p>
    {% endif %}
{% endblock %}

{% block task_data %}
    <p>
        {{ 'lunch.appointement.timeline.meeting_date'|trans }}
        <span class="data">{{ task.data.get('meeting_date')|date('lunch.appointement.timeline.meeting_date_format'|trans) }}</span>.
    </p>
{% endblock %}
